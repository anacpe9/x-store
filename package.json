{
  "name": "x-store",
  "version": "0.0.1",
  "description": "Core service for the booke store system.",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "npx rimraf dist",
    "build": "npx nest build",
    "prebuild:prod": "npx rimraf dist && npx rimraf node_modules && yarn install --frozen-lockfile",
    "build:prod": "npx nest build && yarn install --frozen-lockfile --production && cp package.json dist/ && sed 's/.\\/..\\/..\\/package.json/.\\/..\\/package.json/g' dist/common/constants.js > dist/common/constants.js.new && rm dist/common/constants.js && mv dist/common/constants.js.new dist/common/constants.js && cp -R node_modules dist/node_modules && find ./dist/ -type f -name '*.d.ts' -delete && find ./dist/ -type f -name '*.js.map' -delete",
    "postbuild:prod": "yarn install --frozen-lockfile",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npx nest start",
    "start:dev": "npx nest start --watch",
    "start:debug": "npx nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test npx jest",
    "test:watch": "NODE_ENV=test npx jest --watch",
    "test:cov": "npx jest --coverage",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test npx jest --config ./jest-e2e.json",
    "test:e2e:cov": "NODE_ENV=test npx jest --config ./jest-e2e.json --coverage"
  },
  "dependencies": {
    "@nestjs/common": "9.1.2",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.1.2",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "9.1.2",
    "@nestjs/swagger": "6.1.2",
    "@nestjs/typeorm": "9.0.1",
    "bcrypt": "^5.0.1",
    "dayjs": "1.11.5",
    "i": "^0.3.7",
    "merge-yaml": "^1.1.0",
    "mongoose": "^6.6.3",
    "mongoose-paginate": "^5.0.3",
    "npm": "^8.19.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "8.8.0",
    "reflect-metadata": "^0.1.13",
    "request-ip": "3.3.0",
    "rimraf": "^3.0.2",
    "rxjs": "7.5.7",
    "swagger-ui-express": "4.5.0",
    "typeorm": "0.3.10"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.4",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.1.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.1.1",
    "@types/node": "18.7.23",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "jest": "29.1.2",
    "mongodb-memory-server": "^8.9.3",
    "node-mocks-http": "^1.11.0",
    "pg-mem": "2.6.3",
    "pg-promise": "10.12.0",
    "prettier": "^2.7.1",
    "supertest": "6.2.4",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
